@model DoceApp.Models.RegisterViewModel;
@{
	ViewData["Title"] = "RegisterUser";
	Layout = "CleanLayout";

	var hasReturn = Model?.ReturnMessage != null ? "true" : "false";
	
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>
*@
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class="flex-box">
	<div class="flex-box-child">
		<div class="figure-img">
			<h1 class="title">Candy Gourmet</h1>
		</div>
		<div class="facaLogin">
			<div class="box-login">
				<h1 class="subtitle">Cadastro</h1>
			</div>
			<br/>
			<form method="post" asp-controller="User" asp-action="Register">
				<input class="form-control input-lg" asp-for="Name" type="text" aria-label="Nome" placeholder="Nome">
				
				<br/>

				<input class="form-control input-lg" asp-for="Email" type="email" aria-label="Email" placeholder="ex: example@email.com.br">

				<br />
				<input class="form-control input-lg" asp-for="Cpf" type="text" placeholder="ex: 000.000.000-00">

				<br />

				<input class="form-control input-lg" asp-for="Nickname" type="text" aria-label="Usuário" placeholder="Usuário">
				
				<br />
				
				<input class="form-control input-lg" asp-for="Password" type="password" placeholder="Senha" id="password" >
				
				<br/>
				
				<input class="form-control input-lg" asp-for="ConfirmPassword" type="password" placeholder="Confirmar Senha" id="confirm_password">

				<br/>
				<br/>


				<button type="submit" class="btn btn-primary" > Cadastrar</button>
				
				<p class="link">
					Já tem conta?
					<a asp-action="Login"> Ir para Login </a>
				</p>
			</form>
		</div>
	</div>
</div>  


<script>

		if ("@hasReturn" === "true") {
		CallToastr("@Model?.ReturnMessage.Type", "@Model?.ReturnMessage.Title", "@Model?.ReturnMessage.Message")
	}
</script>