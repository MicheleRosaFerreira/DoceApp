@model DoceApp.Models.PeopleViewModel;
@{
	ViewData["Title"] = "Register";
	Layout = "CleanLayout";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.2/js/toastr.min.js"></script>

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<div class="flex-box">
	<div class="flex-box-child">
		<div class="figure-img">
			<h1 class="title">Candy Gourmet</h1>
		</div>
		<div class="facaLogin">
			<div class="box-login">
				<h1 class="subtitle">Cadastro</h1>
			</div>
			<br/>
			<form role="form">
				<input class="form-control input-lg" type="text" aria-label="Nome" placeholder="Nome">
				
				<br/>

				<input class="form-control input-lg" type="email" aria-label="Email" placeholder="ex: example@email.com.br">

				<br />

				<input class="form-control input-lg" type="text" aria-label="Usuário" placeholder="Usuário">
				
				<br />
				
				<input class="form-control input-lg" type="password" aria-label="Senha" placeholder="Senha">
				
				<br/>
				
				<input class="form-control input-lg" type="password" aria-label="ConfirmarSenha" placeholder="Confirmar Senha">

				<br/>
				<br/>


				<button type="submit" class="btn btn-primary" > Cadastrar</button>
				
				<p class="link">
					Já tem conta?
					<a asp-action="Login"> Ir para Login </a>
				</p>
			</form>
		</div>
	</div>
</div>  
<script>
	var status = "@Model?.ErrorType";
	console.log(status)
	if (status == "J") {
		CallToastr("error", "Falha ao realizar cadastro", "O campo usuário é obrigatório!")
	}

	if (status == "P") {
		CallToastr("error", "Falha ao realizar cadastro", "Usuário já cadastrado!")
	}
    if (status == "D") {
			CallToastr("error", "Falha ao realizar cadastro", "As senhas são diferentes!")
	}
    if (status == "C") {
           CallToastr("error", "Falha ao realizar cadastro", "As senhas são diferentes!")
	}
</script>
